                <div class="col-md-9" style="margin-top:35px;">
                    <b style="font-family: 'Roboto', sans-serif; font-size:30px; margin-left:30px"><%=@solicitacao[:categoria].mb_chars.capitalize%></b>
                    <p style="font-family: 'Roboto', sans-serif; font-size:20px; margin-left:30px"><%=@solicitacao[:descricao].mb_chars.capitalize%></p>
                </div>
            </div>
            
